<div class="wrapper">
  <div class="up_bar">
    <%= render "up_bar" %>
  </div>

  <div class="notifications">
    <%= notice %>
  </div>

  <div class="main">

    <div class="team-news">
      <h2 class="news">
        <b>TEAM NEWS</b>
      </h2>
      <% @teams.each do |team| %>
      <ul class='news-topics'>
        <li class="topic">
          <%= link_to team_path(team.id) do %>
            <%= image_tag team.image, class:"topic-image" %>
            <h3 class="explain">
              NEWS: <%= team.news_title%>
            </h3>
            <p><%= team.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
          <% end %>
        </li>
      </ul>
      <% end %>
    </div>

    <div class="items">
      <h2 class="pick-up-items">
        <b>PICK UP ITEMS</b>
      </h2>
      <% @items.each do |item| %>
      <ul class="handing-items">
        <li class="item">
          <%= link_to item_path(item.id), class: "link" do %>
            <%= image_tag item.image, class:"item-image"%>
            <h3 class="product">
              <%= item.item_name%>
            </h3>
            <div class="product-price">
              <%= item.price%>円
            </div>
          <% end %>
        </li>
      </ul>
      <% end %>
      <ul class="more-items">
        <li class="all-items">
          <%= link_to("/", class: "link") do %>
            <b>全ての商品を見る＞</b>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="players-detail">

      <h2 class="team-player">
        <b>TEAM PLAYERS</b>
      </h2>

      <div class="position">
        <b>ALL PLAYERS</b>
      </div>
      <% @players.each do |player| %>
      <ul class="players">
        <li class="player">
          <%= link_to players_path(player.id), class: "link" do %>
            <%= image_tag player.image, class: "player-foto"%>
            <p class="player-name">
              <%= player.number %> : <%= player.player_name %>
            </p>
          <% end %>
        </li>
      </ul>
      <% end %>

      <ul class="more-players">
        <li class="all-players">
          <%= link_to("/", class: "link") do %>
            <b>全ての選手のプロフィール＞</b>
          <% end %>
        </li>
      </ul>
    </div>

  </div>

  <div class="under_bar">
    <%= render "under_bar" %>
  </div>
</div>
