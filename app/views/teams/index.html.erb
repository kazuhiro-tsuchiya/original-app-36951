          <%= link_to("/", class: "link") do %>
            <%= image_tag "landscape3.jpeg", class: "player-foto"%>
            <p class="player-name">6 : name</p>
          <% end %>
        </li>
      </ul>

      <div class="position">
        <b>FORWARDS</b>
      </div>
      <ul class="players">
        <li class="player">
          <%= link_to("/", class: "link") do %>
            <%= image_tag "landscape4.webp", class: "player-foto"%>
            <p class="player-name">10 : name</p>
          <% end %>
        </li>
      </ul>
      <ul class="more-players">
        <li class="all-players">
          <%= link_to("/", class: "link") do %>
            <b>全ての選手のプロフィール＞</b>
          <% end %>
        </li>
      </ul>
    </div>

  </div>

  <div class="under_bar">
    <%= render "under_bar" %>
  </div>
</div>
