<div class="up-bar-header">
  <div class="enblem">
    <%= image_tag "golden.png", class:"logo-icon"%>
  </div>
  <div class="team-name">
    <li>ex.ABC</li>
  </div>
  <div class="login-button">
    <% if current_user&.admin? %>
      <%= link_to "NEWS投稿", new_team_path, class: "login" %>
      <%= link_to "投稿", new_item_path, class: "login" %>
      <%= link_to "NEW PLAYER", new_player_path, class: "login" %>
      <%= link_to current_user.nickname, edit_user_registration_path, class: "login" %>
      <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "login" %>
    <% elsif user_signed_in? %>
      <%= link_to current_user.nickname, edit_user_registration_path, class: "login" %>
      <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "login" %>
    <% else %>
      <%= link_to "LOGIN", new_user_session_path, class: "login" %>
      <%= link_to "SIGN UP", new_user_registration_path, class: "sign-up" %>
    <% end %>
  </div>
</div>